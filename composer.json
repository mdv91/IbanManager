{
    "name": "mdv91/bicform",
    "description": "BICForm is a light platform to allow associations to manage their Bank Identification Code Forms",
    "license": "Apache-2.0",
    "require": {
        "symfony/yaml": "^3.1",
        "incenteev/composer-parameter-handler": "~2.0",
        "cedriclombardot/twig-generator": "^1.1",
        "phpunit/phpunit": "5.5.*"
    },
    "scripts": {
        "post-install-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters"
        ],
        "post-update-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters"
        ]
    },
    "extra": {
        "incenteev-parameters": {
            "file": "config/parameters.yml"
        }
    },

    "autoload": {
        "psr-4" : {
            "BicForm\\" : "lib/"
        }
    },
    "config":  {
        "bin-dir" : "bin/"
    }
}
